<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingStart="64dp"
    android:paddingEnd="64dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/background_grey_light"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="64sp"
        android:layout_marginBottom="64dp"
        android:fontFamily="@font/bmjua_otf"
        android:textColor="@color/background_grey_dark2"
        android:text="@string/app_name"/>

    <Button
        android:id="@+id/facebookLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/com_facebook_blue"
        android:textColor="@color/white"
        android:layout_margin="4dp"
        android:textSize="18sp"
        android:fontFamily="@font/bmjua_otf"
        android:text="@string/msg_facebook_login" />

    <Button
        android:id="@+id/googleLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/google_background"
        android:textColor="@color/white"
        android:fontFamily="@font/bmjua_otf"
        android:layout_margin="4dp"
        android:textSize="18sp"
        android:text="구글 로그인" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/emailLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="@font/bmjua_otf"
            android:text="이메일 로그인" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/signUp"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:fontFamily="@font/bmjua_otf"
            android:layout_height="wrap_content"
            android:text="가입하기" />
    </LinearLayout>

</LinearLayout>