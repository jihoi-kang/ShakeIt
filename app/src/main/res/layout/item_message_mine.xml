<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/chacol"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <View
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:background="@color/background_grey_light2"
            android:layout_width="match_parent"
            android:layout_height="0.3dp" />

        <TextView
            android:id="@+id/time"
            android:fontFamily="@font/nanum_barun_gothic"
            android:textSize="12sp"
            android:textColor="@color/background_grey_light1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_weight="1"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            android:background="@color/background_grey_light2"
            android:layout_width="match_parent"
            android:layout_height="0.3dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/message_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum_barun_gothic"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/message_mine_shpae"
        android:layout_alignParentEnd="true"
        android:padding="8dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/black"
        android:layout_below="@+id/ll_time" />

    <TextView
        android:id="@+id/sendedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/nanum_barun_gothic"
        android:textSize="12sp"
        android:textColor="@color/background_grey_light1"
        android:layout_toLeftOf="@+id/message_content"
        android:layout_alignBottom="@id/message_content" />

    <TextView
        android:id="@+id/unreadCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textColor="@color/yellow"
        android:fontFamily="@font/nanum_barun_gothic"
        android:textSize="12sp"
        android:layout_toLeftOf="@+id/sendedTime"
        android:layout_alignBottom="@id/sendedTime" />

</RelativeLayout>